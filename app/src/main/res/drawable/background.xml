<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer pertama: Bagian atas dengan warna pertama -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="50dp">
        <shape>
            <solid android:color="@color/white"/> <!-- Warna pertama -->
        </shape>
    </item>

    <!-- Layer kedua: Bagian bawah dengan sudut melengkung -->
    <item android:left="0dp" android:right="0dp" android:top="200dp" android:bottom="0dp">
        <shape>
            <solid android:color="#508DC3A7"/> <!-- Warna kedua -->
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"/> <!-- Sudut melengkung di bagian atas -->
        </shape>
    </item>
</layer-list>
