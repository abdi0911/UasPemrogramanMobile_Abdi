<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgDetailPhoto"
            android:layout_width="414dp"
            android:layout_height="312dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tvDetailName"
            android:textColor="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/tvDetailPusatPemerintahan"
            android:textColor="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetailBupatiWalikota"
            android:textColor="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetailLuasWilayah"
            android:textColor="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetailJumlahPenduduk"
            android:textColor="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetailJumlahKecamatan"
            android:textColor="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetailJumlahKelurahan"
            android:textColor="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetailJumlahDesa"
            android:textColor="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetailUrlPeta"
            android:textColor="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetailDeskripsi"
            android:textColor="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />
    </LinearLayout>
</ScrollView>

